<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="Create an account to see your progress. It's free and takes only few minutes :)\n Click Box to sign in or create an account"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle">

        <LinearLayout
            android:id="@+id/wordll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ff4500"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle">

                <TextView
                    android:id="@+id/word"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:text="NUMBERS"
                    android:textSize="20dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tap"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Tap To See meaning"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/meaningll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bookmark"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/speak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/speak"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/meaning"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="XXXXXX"
                    android:textSize="20dp"
                    android:layout_below="@id/speak"
                    android:gravity="center"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/knew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I knew the meaning"
                android:background="#4BFF7D"
                android:textSize="18dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/dontknew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I didn't knew the meaning"
                android:background="@drawable/rectangle2"
                android:backgroundTint="#FF7676"
                android:textSize="18dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="New Word"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have mastered 1 out of 51 words"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/rectangle"/>

        <View
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ff4500"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are reviewing 1 out of 51 words"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/rectangle"/>

        <View
            android:id="@+id/progress2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ff4500"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are learning 1 out of 51 words"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/rectangle"/>

        <View
            android:id="@+id/progress3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:backgroundTint="#ff4500"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"/>

    </RelativeLayout>


</LinearLayout>