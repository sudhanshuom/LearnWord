<?xml version="1.0" encoding="utf-8"?>

                  <LinearLayout
                     xmlns:android="http://schemas.android.com/apk/res/android"
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                    >
           <Button
           android:layout_width="80dp"
           android:layout_height="60dp"
           android:layout_gravity="right"
           android:gravity="right"
           android:hint="skip"
           android:background="#ffffff"
           android:textColor="#ff4500"
           android:textColorHint="#ff4500"
           android:textSize="24dp" />

         <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Don't Worry, We Don't Spam out users.\n\n
                         An OTP has been sent to your Mobile Number and Email Address"
        android:background="#ffffff"
        android:textSize="15dp" />
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="OTP"
        android:layout_marginStart="20dp"
        android:background="#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="20dp" />

      <LinearLayout
       android:layout_width="match_parent"
          android:layout_marginTop="10dp"
       android:layout_height="100dp"
       android:orientation="horizontal"
       >
             <TextView
               android:layout_weight="0.15"
               android:layout_height="100dp"
                 android:layout_marginLeft="15dp"
               android:textStyle="bold"
               android:text="3"
                 android:gravity="center"
                 android:layout_gravity="center"
               android:background="@drawable/orange_circular"
               android:textColor="#000000"
               android:textSize="15dp"
               android:layout_width="match_parent"
              />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:layout_weight="0.15"
               android:layout_marginLeft="15dp"
               android:layout_gravity="center"
               android:text="3"
               android:gravity="center"
               android:background="@drawable/orange_circular"
               android:textStyle="bold"
               android:textColor="#000000"
               android:textSize="15dp" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="0.15"
              android:layout_marginLeft="15dp"
              android:layout_gravity="center"
              android:text="2"
              android:gravity="center"
              android:background="@drawable/orange_circular"
              android:textStyle="bold"
              android:textColor="#000000"
              android:textSize="15dp" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="0.15"
              android:layout_marginLeft="15dp"
              android:layout_gravity="center"
              android:text="5"
              android:gravity="center"
              android:background="@drawable/orange_circular"
              android:textStyle="bold"
              android:textColor="#000000"
              android:textSize="15dp" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_weight="0.15"
              android:layout_marginLeft="15dp"
              android:layout_gravity="center"
              android:text="6"
              android:gravity="center"
              android:background="@drawable/orange_circular"
              android:textStyle="bold"
              android:textColor="#000000"
              android:textSize="15dp" />
    </LinearLayout>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Resend OTP(00:46)"
        android:layout_marginStart="20dp"
        android:background="#ffffff"
        android:layout_marginLeft="20dp" />
       <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
           android:id="@+id/btngo"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circular"
        android:textColorHint="#ffffff"
        android:hint="GO ->"
        android:textSize="25dp" />
</LinearLayout>
