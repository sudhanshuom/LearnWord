<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/AccountNotice"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_orange_filled"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="NUMBERS"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_below="@id/text1"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle" />

                        <View
                            android:id="@+id/progress"
                            android:layout_width="match_parent"
                            android:layout_height="13dp"
                            android:layout_below="@id/text1"
                            android:layout_centerVertical="true"
                            android:layout_margin="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle"
                            android:backgroundTint="#00BE00" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/startnumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Study these words"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_orange_filled"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Days of Week"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_below="@id/text2"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle" />

                        <View
                            android:id="@+id/progress2"
                            android:layout_width="match_parent"
                            android:layout_height="13dp"
                            android:layout_below="@id/text2"
                            android:layout_centerVertical="true"
                            android:layout_margin="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle"
                            android:backgroundTint="#00BE00" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Study these words"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_orange_filled"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Months of Year"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_below="@id/text3"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle" />

                        <View
                            android:id="@+id/progress3"
                            android:layout_width="match_parent"
                            android:layout_height="13dp"
                            android:layout_below="@id/text3"
                            android:layout_centerVertical="true"
                            android:layout_margin="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle"
                            android:backgroundTint="#00BE00" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Study these words"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_orange_filled"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Relationships"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_below="@id/text4"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle" />

                        <View
                            android:id="@+id/progress4"
                            android:layout_width="match_parent"
                            android:layout_height="13dp"
                            android:layout_below="@id/text4"
                            android:layout_centerVertical="true"
                            android:layout_margin="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle"
                            android:backgroundTint="#00BE00" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Study these words"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_orange_filled"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Food Items"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_below="@id/text5"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle" />

                        <View
                            android:id="@+id/progress5"
                            android:layout_width="match_parent"
                            android:layout_height="13dp"
                            android:layout_below="@id/text5"
                            android:layout_centerVertical="true"
                            android:layout_margin="1dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rectangle"
                            android:backgroundTint="#00BE00" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Study these words"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/host_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true" />

</RelativeLayout>